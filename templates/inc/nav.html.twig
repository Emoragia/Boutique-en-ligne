                        <li><a class="dropdown-item" href="{{ path('genre_Surnaturel') }}">Surnaturel</a></li>
                        <li><a class="dropdown-item" href="{{ path('genre_Psychologique') }}">Psychologique</a></li>
                        <li><a class="dropdown-item" href="{{ path('genre_Sport') }}">Sport</a></li>
                        <li><a class="dropdown-item" href="{{ path('genre_Ecole') }}">École</a></li>
                        <li><a class="dropdown-item" href="{{ path('genre_SuperPouvoirs') }}">Super Pouvoirs</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black fw-bolder" href="{{ path('cart_index') }}"><i class="fa-solid fa-cart-shopping"></i></a>
                </li>
                {% if app.user %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-black fw-bolder" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Bonjour, {{ app.user.username }}
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_profil_modifier') }}">Modifier mon profil</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Se déconnecter</a></li>
                        {% if is_granted("ROLE_ADMIN") %}
                        <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}">Administration</a></li>
                        {% endif %}
                    </ul>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link text-black fw-bolder" href="{{ path('app_login') }}">Bonjour, Identifiez-vous</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
</body>
</html>