{% extends 'base.html.twig' %}

{% block title %}
    Liste des utilisateurs
{% endblock %}

{% block body %}
    {% include 'inc/nav.html.twig' %}

    <div class="container">
        <div class="row">
            {% include "inc/adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1>Liste des utilisateurs</h1>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Rôles</th>
                        <th>ACTION</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}

                        <tr>
                            <th>{{ user.id }}</th>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}

                                {% if role == "ROLE_ADMIN" %}
                                    {% set name = "Administrateur" %}
                                    {% set color = "danger" %}
                                {% elseif role == "ROLE_USER" %}
                                    {% set name = "Membre" %}
                                    {% set color = "primary" %}
                                {% endif %}
                                    <span class="badge bg-{{ color }}">{{ name }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="#" class="btn btn-success">Modifier</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>

{% endblock %}

